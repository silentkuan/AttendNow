                {


                    <button type="button" class="btn btn-primary" onclick="defineTable('user','AddUserDefine')">Define</button>
                }
                else
                {
                    <button type="button" class="btn btn-primary" onclick="defineTable('user','EditUserDefine')">Define</button>
